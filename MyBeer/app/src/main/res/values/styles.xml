<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeData" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlNormal">@color/primary</item>
    </style>

    <!--*****************************************************************************************-->

    <!-- Menu App -->
    <style name="DrawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="NavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!--*****************************************************************************************-->

    <!-- Edit Text -->
    <style name="MainEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/edit_text_main</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="TittleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MapEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/edit_text_map</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textColorHint">@color/primary_dark</item>
        <item name="android:inputType">text</item>
    </style>

    <!--*****************************************************************************************-->

    <!-- Button -->
    <style name="ButtonRoundWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/button_change_main</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

</resources>
